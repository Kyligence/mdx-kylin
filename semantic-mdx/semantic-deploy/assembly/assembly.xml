<assembly>
    <id>release</id>
    <formats>
        <format>tar.gz</format>
    </formats>

    <fileSets>
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>./scripts</directory>
            <excludes>
                <exclude>tool.sh</exclude>
                <exclude>service.sh</exclude>
                <exclude>diagnose_package.sh</exclude>
                <exclude>parent-child_reform.py</exclude>
                <exclude>diagnose_package_offline.sh</exclude>
            </excludes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>scripts</outputDirectory>
            <directory>./scripts</directory>
            <includes>
                <include>tool.sh</include>
                <include>service.sh</include>
                <include>diagnose_package.sh</include>
                <include>parent-child_reform.py</include>
                <include>diagnose_package_offline.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>./sql</outputDirectory>
            <directory>sql</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>./public/WEB-INF</outputDirectory>
            <directory>public/WEB-INF</directory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!--
        <fileSet>
            <outputDirectory>./tool</outputDirectory>
            <directory>../semantic-data-tool/target</directory>
            <includes>
                <include>*-tool-*.jar</include>
            </includes>
        </fileSet>
        -->
        <fileSet>
            <outputDirectory>./lib</outputDirectory>
            <directory>./lib</directory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>./diag_dump</outputDirectory>
            <directory>./diag_dump</directory>
            <fileMode>0755</fileMode>
            <excludes>
                <exclude>marker</exclude>
            </excludes>
        </fileSet>
    </fileSets>

</assembly>
